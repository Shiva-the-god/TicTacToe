            android:onClick="Check"
            android:textStyle="bold"></Button>

        <Button
            android:id="@+id/btn6"
            android:layout_marginLeft="11dp"
            android:onClick="Check"
            android:textStyle="bold"></Button>

        <Button
            android:id="@+id/btn7"
            android:onClick="Check"
            android:textStyle="bold"></Button>

        <Button
            android:id="@+id/btn8"
            android:layout_marginLeft="11dp"
            android:onClick="Check"
            android:textStyle="bold"></Button>

        <Button
            android:id="@+id/btn9"
            android:layout_marginLeft="11dp"
            android:onClick="Check"
            android:textStyle="bold"></Button>

    </GridLayout>


</LinearLayout>